		var predict_cal = 0;

		$("#HowMany").click(function() {
			
		});
		function HowMany(form) {
			predict_cal = (66 + (13.7 * myWeight(kg)) + (5 * myHeight(cm)) - (6.8 * myAge)) * 3 / 24 * myTime;
			form.Fdiff.value = predict_cal;

		}

		function SetMyWeight(weight) {
			myWeight = weight.value;
		}

		function SetmyDistance(dis) {
			myDistance = dis.value;
		}

		function ClearForm(form) {

			form.myWeight.value = "";
			form.myTime.value = "";
			form.myAge.value = "";
			form.myHeight.value = "";
			form.Fdiff.value = "";

		}
	</script>
